{
    "compilerOptions": {
        "baseUrl": "../src",
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "resolveJsonModule": true
    },
    "include": ["../src/**/*.ts", "../src/**/index.tsx"]
}
