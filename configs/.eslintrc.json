{
    "ignorePatterns": [".git/", ".github/", "node_modules/", "dist/", "stats/", "coverage/", "docs/"],
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": [
        "eslint:recommended", // Base ESLint recommended rules
        "plugin:@typescript-eslint/recommended", // TypeScript recommended rules
        "plugin:react/recommended", // React recommended rules
        "plugin:react-hooks/recommended", // React hooks linting
        "plugin:jsx-a11y/recommended", // Accessibility best practices
        "airbnb", // Airbnb style guide for consistent code
        "airbnb/hooks", // Airbnb hooks rules
        "prettier", // Disables ESLint rules that conflict with Prettier
        "plugin:prettier/recommended" // Enables eslint-plugin-prettier and eslint-config-prettier
    ],
    "plugins": [
        "react", // React plugin
        "react-hooks", // React hooks plugin
        "@typescript-eslint", // TypeScript plugin
        "jsx-a11y", // Accessibility plugin
        "prettier" // Prettier plugin
    ],
    "rules": {
        // Prettier
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto",
                "tabWidth": 4,
                "trailingComma": "none",
                "printWidth": 120
            }
        ],
        // React
        "react/react-in-jsx-scope": "off", // Not needed for React 17+
        "react/prop-types": "off", // Disable prop-types (handled by TypeScript)
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [".jsx", ".tsx"]
            }
        ], // Allow JSX in TSX files
        "react/jsx-props-no-spreading": "off",
        "react-hooks/exhaustive-deps": "off", // Allow prop spreading (optional)
        "react/require-default-props": "off",
        "react/function-component-definition": "off",
        "react/jsx-no-useless-fragment": "off",
        // TypeScript
        "@typescript-eslint/explicit-function-return-type": "off", // Optional return types
        "@typescript-eslint/no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_"
            }
        ], // Allow unused vars with underscore prefix
        "@typescript-eslint/no-explicit-any": "warn", // Warn on `any` type usage
        "@typescript-eslint/explicit-module-boundary-types": "off", // Optional boundary types
        // Accessibility
        "jsx-a11y/anchor-is-valid": "off",
        "jsx-a11y/label-has-associated-control": "off",
        // JEST
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": ["**/*.test.tsx", "**/*.stories.tsx", "**/*.js", "*/test/setup.ts"]
            }
        ],
        // General
        "no-console": "warn", // Warn on console usage
        "no-debugger": "error", // Disallow debugger
        "no-plusplus": "off",
        "import/prefer-default-export": "off", // Allow named exports
        "import/no-unresolved": "off",
        "import/extensions": "off",
        "no-restricted-exports": "off"
    },
    "overrides": [
        {
            "files": ["*.stories.tsx"], // Target story files
            "rules": {
                "no-script-url": "off" // Disable the no-script-url rule only for story files
            }
        },
        {
            "files": ["*.js"],
            "rules": {
                "@typescript-eslint/no-require-imports": "off"
            }
        }
    ],
    "settings": {
        "react": {
            "version": "detect" // Automatically detect the react version
        }
    }
}
